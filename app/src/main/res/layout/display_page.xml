<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/displaybg">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="331dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:background="@drawable/displaybox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="332dp"
        android:layout_height="102dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/displaybox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />

    <Button
        android:id="@+id/buttonback3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/monsemibold"
        android:text="@string/display"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alireg"
        android:text="NIGHT MODE"
        android:textColor="#272727"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.288" />

    <ToggleButton
        android:id="@+id/toggleButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/modetoggle"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="339dp"
        android:layout_height="115dp"
        android:checked="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alireg"
            android:text="COLOR"
            android:textColor="#272727"
            android:textSize="22dp"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/green"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:paddingLeft="8dp"
            android:text="Green"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/red"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="Red"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:paddingLeft="8dp"
            android:text="All"
            android:textSize="14dp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
